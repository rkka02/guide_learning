# Copy this file to .env and fill in values.

# --- LLM (OpenAI-compatible) ---
# Required if GUIDE_FAKE_LLM=0
LLM_API_KEY=your_api_key_here
LLM_BASE_URL=https://api.openai.com/v1
LLM_MODEL=gpt-4o-mini
LLM_MAX_TOKENS_FIELD=max_tokens

# --- Guide settings ---
GUIDE_LANGUAGE=en
GUIDE_OUTPUT_DIR=./guide_sessions
GUIDE_TEMPERATURE=0.5
GUIDE_MAX_TOKENS=8000

# --- Demo / examples ---
# 1 = no network, use FakeLLMClient
# 0 = use OpenAICompatibleClient.from_env()
GUIDE_FAKE_LLM=1
